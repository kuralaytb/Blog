<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head') -%>
</head>
<body>
    <%- include('header') -%>
    <div class="container blog-container">
        <div class="blog new">
             <h2 class="title new-blog mb-3">Новый блог</h2>
            <form method="post" enctype="multipart/form-data">
              <input class="form-control mb-3" type="text" placeholder="Введите заголовок блога">
              <select class="form-select mb-3">
                <option selected>Выберите категорию</option>
                <% categories.forEach(category=>{
                %>
                <option><%= category.name%></option>
                <%
                }) %>
              </select>
             <div class="input-file-row mb-3"> 
                    <label class="input-file"> 
                           <input type="file" name="file[]" multiple>   
                           <span>Выберите картинку</span> 
                     </label> 
                    <!-- <div class="input-file-list"></div>    -->
             </div> 
             <textarea class="form-control" rows="5" placeholder="Введите описание блога"></textarea>  
             <button type="submit" class="btn">Создать</button>
           </form>
        </div>
    </div>